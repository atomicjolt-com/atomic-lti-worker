{
	"compilerOptions": {
		"noEmit": true,
		"module": "es2022",
		"target": "es2021",
		"lib": [
			"es2021"
		],
		"esModuleInterop": true,
		"strict": true,
		"alwaysStrict": true,
		"preserveConstEnums": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"types": [
			"@cloudflare/workers-types",
			"vitest-environment-miniflare/globals"
		],
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": false,
		"skipLibCheck": true
	},
	"types": [
    "@cloudflare/workers-types",
    "node"
  ],
	"include": ["src"],
	"exclude": ["node_modules", "dist", "test"]
}
